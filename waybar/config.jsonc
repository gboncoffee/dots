{
    "reload_style_on_change": true,
    "spacing": 6,
    "height": 27,
    "layer": "top",

    "modules-left": [
        "custom/menu",
        "niri/workspaces",
        "niri/window"
    ],
    "modules-center": [
        "mpris"
    ],
    "modules-right": [
        "privacy",
        "wireplumber",
        "clock",
        "custom/window-size",
        "custom/close-window"
    ],

    "custom/menu": {
        "format": "Menu",
        "tooltip": false,
        "on-click": "fuzzel"
    },

    "niri/workspaces": {
        "format": "{icon}",
        "format-icons": {
            "work": "🖥",
            "browser": "🌎",
            "chat": "💬",
            "music": "🎵",

            "default": "⋯",
        }
    },

    "niri/window": {
        "separate-outputs": true,
        "icon": true,
    },

    "mpris": {
        "ignored-players": [ "firefox", "mpv" ],
        "format": "{status_icon} {dynamic}",
        "dynamic-order": [ "artist", "title" ],
        "status-icons": {
            "playing": "🎶",
            "paused": "𝄩",
            "stopped": "𝄩"
        }
    },

    "privacy": {
        "icon-spacing": 6,
        "icon-size": 18,
        "modules": [
            {
                "type": "screenshare",
                "tooltip": true,
                "tooltip-icon-size": 24
            },
            {
                "type": "audio-in",
                "tooltip": true,
                "tooltip-icon-size": 24
            }
        ],
        "ignore-monitor": true,
        "ignore": [
            {
                "type": "audio-in",
                "name": "cava"
            },
        ]
    },

    "wireplumber": {
        "format": "🎧 {volume}%",
        "format-muted": "🔇 𝄩 ",
        "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle"
    },

    "clock": {
        "interval": 30,
        "format": "{:%H:%M %F}",
        "tooltip": false,
    },

    "custom/window-size": {
        "format": "📏",
        "on-click": "niri msg action switch-preset-window-width"
    },

    "custom/close-window": {
        "format": "❌",
        "on-click": "niri msg action close-window"
    }
}
