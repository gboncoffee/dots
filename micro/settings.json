{
    "*.[ex,exs]": {
        "tabsize": 2,
        "tabstospaces": true
    },
    "*.c": {
        "commenttype": "/* %s */",
        "tabsize": 4,
        "tabstospaces": true
    },
    "*.cpp": {
        "tabsize": 4,
        "tabstospaces": true
    },
    "*.erl": {
        "tabsize": 2,
        "tabstospaces": true
    },
    "*.go": {
        "tabsize": 4
    },
    "*.hs": {
        "tabsize": 2,
        "tabstospaces": true
    },
    "*.lua": {
        "tabsize": 2,
        "tabstospaces": true
    },
    "*.py": {
        "tabsize": 4,
        "tabstospaces": true
    },
    "*.yaml": {
        "tabsize": 2,
        "tabstospaces": true
    },
    "autosu": true,
    "colorcolumn": 80,
    "colorscheme": "simple",
    "cursorline": false,
    "diffgutter": true,
    "hlsearch": true,
    "hltaberrors": true,
    "hltrailingws": true,
    "indentchar": "|",
    "lsp.ignoreTriggerCharacters": "completion,signature",
    "lsp.server": "go=gopls,c=clangd,cpp=clangd",
    "matchbraceleft": true,
    "parsecursor": true,
    "tabsize": 8
}
